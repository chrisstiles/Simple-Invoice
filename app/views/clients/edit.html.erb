<h1>Edit Client</h1>
<%= form_for(@client) do |f| %>
	<%= f.text_field :name, placeholder: "Client Name" %><br><br>
	<%= f.text_field :email, placeholder: "Email" %><br><br>
	<%= f.text_field :phone, placeholder: "Phone Number" %><br><br>
	<%= f.text_field :address, placeholder: "Address" %><br><br>
	<%= f.text_field :city, placeholder: "City" %><br><br>
	<%= f.select :state, options_for_select(us_states, selected: @client.state), prompt: "Select a state" %><br><br>
	<%= f.text_field :zip, placeholder: "Zip Code" %><br><br>
	Primary Client?
	<%= f.check_box :is_primary %><br>
	<%= f.submit %>
<% end %>
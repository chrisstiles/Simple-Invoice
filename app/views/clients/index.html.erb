<%= provide :title, "Clients" %>

<%= provide :outside_content  do %>

<div id="clientsearch">
	<h3>Filter Clients</h3>
	<form accept-charset="UTF-8" action="/clients" method="get" class="homefilter">
		<input type="text" name="client_name" class="search client_name_search" placeholder="Client Name" autocomplete="off">
	</form>
	<div id="clientfiltering">

	<div id="clientpagination">
		<%= js_will_paginate @clients, :params => {:id=>nil, :method=>'get', :controller=>'clients', :action=>'index'} %> 
	</div>

	</div>
</div>

<div id="clientssidebar">

	<div class="clientsformwrapper">
		<%= render 'form' %>
	</div>

</div>

<% end %>

<div id="pagewrapper" class="clientspage">

<div id="clientscontainer">

<div id="searchresultswrapper">

<div class="loadingspinner">
	<div class="loadingcircle">
		<div class="throbber-loader">Loading...</div>
	</div>
</div>

	<div id="searchresults">

	  <%= render 'list' %>
	</div>
</div>

</div>


</div>
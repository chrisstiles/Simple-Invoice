<header>
	<%= link_to "", root_url, class: "logo" %>
	<div id="menu">
		<% if user_signed_in? %>
		<nav>
			<%= link_to "Invoices", invoices_path, class: "navinvoices#{current_page('invoices', 'invoice')}" %>
			<%= link_to "Estimates", estimates_path, class: "navestimates#{current_page('invoices', 'estimate')}" %>
			<%= link_to "Clients", clients_path, class: "navclients#{current_page('clients')}" %>
		</nav>

		<%= link_to "New Invoice", new_invoice_path, class: "button blue newinvoiceicon" %>

		<div id="sessioninfo">
			<%= link_to "Log Out", destroy_user_session_path, :method => :delete, class: "navsignout" %>
			<%= link_to "Settings", settings_path, class: "navprofile#{current_page('users')}" %>
		</div>

		<% else %>
			<div id="sessioninfo" class="notsignedin">
				<%= link_to "Register", register_path, class: "showregister#{current_page('registrations')}" %>
				<%= link_to "Sign In", sign_in_path, class: "signinbutton#{current_page('sessions')}" %>
				<%= link_to "Home", root_url, class: "sessionhome" %>
			</div>
		<% end %>	
	</div>	
</header>
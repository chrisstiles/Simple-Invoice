<p id="notice"><%= notice %></p>

<h1>Listing Invoices</h1>

<table>
  <thead>
    <tr>
      <th>Invoice number</th>
      <th>Terms</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
        <td><%= invoice.invoice_number %></td>
        <td><%= link_to 'Show', invoice_path(invoice.invoice_number) %></td>
        <td><%= link_to 'Edit', edit_invoice_path(invoice.invoice_number) %></td>
        <td><%= link_to 'Destroy', invoice_path(invoice.invoice_number), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


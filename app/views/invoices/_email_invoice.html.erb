<%= form_for @invoice, :url => url_for(:controller => 'invoices', :action => 'email_invoice'), method: "post", remote: true, class: "sendemailform" do |f|  %>

	<input type="text" name="recipient" class="emailrecipient" placeholder="Recipient"><br>

	CC. Separate with comma<br>
	<input type="text" name="cc" class="emailcc emailtags" placeholder="CC"><br>

	<%= text_area_tag :message %>

	<%= f.submit "Email Invoice", class: "emailinvoicebutton button blue willload" %>

<% end %>

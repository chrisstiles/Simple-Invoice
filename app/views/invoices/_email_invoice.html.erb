<div id="modalvalidationerrors" class="emailinvoicevalidation">
  <div class="validationtitle">
  <div class="closeerrors"></div>
    Please correct the following errors
  </div>
  <div class="errorholder">
    

  </div>
</div>

<div class="formholder emailformwrapper">
<%= form_for @invoice, :url => url_for(:controller => 'invoices', :action => 'email_invoice'), method: "post", remote: true do |f|  %>
<div class="sendemailform">
	
	<div id="recipients">
		<div class="recipientwrapper">
			<label for="recipient">Recipient</label>
			<input type="text" name="recipient" class="emailrecipient modalinput" placeholder="Recipient" value="<%= return_client_email_or_blank(@invoice) %>">
		</div>

		<div class="ccwrapper">
			<label for="cc">CC. Separate with comma</label>
			<input type="text" name="cc" class="emailcc emailtags" placeholder="CC. Separate with comma">
		</div>
	</div>

	<label for="subject">Subject</label>
	<input type="text" name="subject" class="emailsubject modalinput" placeholder="Subject" value="<%= email_subject(@invoice) %>"><br>

	<%= label_tag :message, "Message", class: "messagelabel" %>
	<%= text_area_tag :message, default_message(@invoice), class: "modalinput", placeholder: "Add a message to your invoice" %>

	<%= f.submit "Email Invoice", class: "emailinvoicebutton button blue willload" %>
</div>	

<% end %>

</div>

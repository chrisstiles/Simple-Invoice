<!DOCTYPE html>
<html>
<head>
  <title><%= page_title %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta name="apple-mobile-web-app-status-bar-style" content="black">
  <% if content_for?(:nophone) %><meta name="format-detection" content="telephone=no"><% end %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>


<body class='<%= "#{@browser.platform} #{@browser.name.downcase}" %>'>
<%= yield :outside_content %>

<% if flash[:success] %>
	<div class="success">
	  <div class="successtimer"></div>
	  <div class="closesuccess"></div>
	  <span><%= flash[:success] %></span>
	</div>
<% end %>

<div id="htmlwrapper">
<div id="mobilesidebar"><span></span></div>

<header>
	<%= link_to image_tag("logo.png", alt: "Invoicer"), invoices_path, class: "logo" %>
	<div id="menu">
		<% if user_signed_in? %>
		<nav>
			<%= link_to "Invoices", invoices_path, class: "navinvoices" %>
			<%= link_to "Clients", clients_path, class: "navclients" %>
		</nav>

		<%= link_to "New Invoice", new_invoice_path, class: "button blue newinvoiceicon" %>

		<div id="sessioninfo">
				<%= link_to "Log Out", destroy_user_session_path, :method => :delete, class: "navsignout" %>
				<%= link_to "Settings", settings_path, class: "navprofile" %>
		</div>
		<% else %>
				<div id="sessioninfo">
				<%= link_to "Sign In", new_user_session_path %>
				</div>
		<% end %>	
	</div>	
</header>

<div id="contentwrapper">

	<%= yield %>

</div>


</div>

</body>
</html>
